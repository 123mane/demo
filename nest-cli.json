{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "/language/**/*.json",
        "outDir": "dist/",
        "watchAssets": true
      },
      {
        "include": "/mail/templates/**/*",
        "outDir": "dist/",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
